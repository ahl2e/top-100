<p id="notice"><%= notice %></p>

<h1>Wines</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Winery full</th>
      <th>Wine full</th>
      <th>Vintage</th>
      <th>Note</th>
      <th>Taster initials</th>
      <th>Color</th>
      <th>Country</th>
      <th>Region</th>
      <th>Score</th>
      <th>Price</th>
      <th>Issue date</th>
      <th>Top 100 year</th>
      <th>Top100 rank</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wines.each do |wine| %>
      <tr>
        <td><%= wine.id %></td>
        <td><%= wine.winery_full %></td>
        <td><%= wine.wine_full %></td>
        <td><%= wine.vintage %></td>
        <td><%= wine.note %></td>
        <td><%= wine.taster_initials %></td>
        <td><%= wine.color %></td>
        <td><%= wine.country %></td>
        <td><%= wine.region %></td>
        <td><%= wine.score %></td>
        <td><%= wine.price %></td>
        <td><%= wine.issue_date %></td>
        <td><%= wine.top_100_year %></td>
        <td><%= wine.top100_rank %></td>
        <td><%= link_to 'Show', wine %></td>
        <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
        <td><%= link_to 'Destroy', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

